{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "standard",
        "standard-jsx",
        "plugin:react/recommended",
        "plugin:css-modules/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "css-modules"
    ],
    "rules": {
        "react/prop-types": 0,
        "standard/computed-property-even-spacing": "off",
        "react-hooks/rules-of-hooks": "error"
    }
}